ALTER          PROCEDURE sprpStatement
	@Customer_Id 		INT,
	@Statement_Date SMALLDATETIME
AS
	DECLARE @Previous_Balance AS MONEY
	DECLARE @Starting_Balance AS MONEY
	DECLARE @Over120 AS MONEY
	DECLARE @Over60 AS MONEY
	DECLARE @Over90 AS MONEY
	DECLARE @Total_Balance AS MONEY
	DECLARE @FirstRecord AS VARCHAR(12)

	SELECT
		@Starting_Balance =3D ISNULL(starting_balance,0.00)
	FROM
		tbl_customer
	WHERE=20
		customer_id =3D @Customer_ID
=09
	SELECT
		@Previous_Balance =3D SUM(ISNULL(amount,0.00))=20
	FROM
		tbl_ledger
	WHERE=20
		CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date,101))  AND
		customer_id =3D @customer_id
=09
	SELECT @Over120 =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger WHERE =
customer_id=3D@Customer_Id AND =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
DATEADD(DAY,-120,CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_dat=
e,101)))
	SELECT @Over60 =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger WHERE =
customer_id=3D@Customer_Id AND =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
DATEADD(DAY,-60,CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date=
,101)))
	SELECT @Over90 =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger WHERE =
customer_id=3D@Customer_Id AND =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
DATEADD(DAY,-90,CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date=
,101)))
	SELECT @Total_Balance =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger =
WHERE customer_id=3D@Customer_Id=20

	SELECT
		customer_id,
		RTRIM(LTRIM(ISNULL(prefix,'') + ' ' + ISNULL(first_name,'') + ' ' + =
ISNULL(last_name,'') + CASE WHEN LEN(ISNULL(prefix,'') + =
ISNULL(first_name,'') + ISNULL(last_name,'') + =
ISNULL(middle_initial,''))>0 THEN char(13) + char(10) ELSE '' END + =
ISNULL(company_name,''))) AS customer_name,
		LTRIM(RTRIM(ISNULL(street1,'') + CASE WHEN ISNULL(street1,'')<>'' THEN =
char(13) + char(10) ELSE '' END + ISNULL(street2,''))) as street,
		ISNULL(city,'') + ', ' + ISNULL(state,'') + ' ' + ISNULL(zip_code,'') =
AS city_state_zip,
		CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date,101)) as =
statement_date,
		ISNULL(@Previous_Balance,0.00) + ISNULL(@Starting_Balance,0.00) as =
previous_balance,
		ISNULL(@Total_Balance + @Starting_Balance,0) AS total_balance
	FROM
		tbl_customer
	WHERE=20
		customer_id =3D @customer_id

	SELECT TOP 1
		@FirstRecord =3D ledger_id
	FROM=20
		tbl_ledger=20
	WHERE=20
		customer_id =3D @Customer_id AND
		CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) =3D =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date,101))
	ORDER BY
		CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)),
		ledger_order
=09
	SELECT=20
		ledger_id,
		ledger_date,
		CASE WHEN type_id=3D1 THEN amount ELSE NULL END AS taxable,
		CASE WHEN type_id=3D2 THEN amount ELSE NULL END AS [non-taxable],
		CASE WHEN type_id=3D3 THEN amount ELSE NULL END AS payment,
		CASE WHEN type_id=3D4 THEN amount ELSE NULL END AS discount,
		CASE WHEN type_id=3D5 THEN amount ELSE NULL END AS interest,
		reference,
		CASE WHEN ledger_id =3D @FirstRecord THEN amount + =
ISNULL(@Previous_Balance,0.00) + ISNULL(@Starting_Balance,0.00) ELSE =
amount END AS amount
	FROM
		tbl_ledger
	WHERE
		customer_id =3D @Customer_Id AND
		CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) =3D =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date,101))
	ORDER BY
		CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)),
		ledger_order

	SELECT @Over120 =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger WHERE =
customer_id=3D@Customer_Id AND =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
DATEADD(DAY,-120,CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_dat=
e,101)))
	SELECT @Over60 =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger WHERE =
customer_id=3D@Customer_Id AND =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
DATEADD(DAY,-60,CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date=
,101)))
	SELECT @Over90 =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger WHERE =
customer_id=3D@Customer_Id AND =
CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),statement_date,101)) < =
DATEADD(DAY,-90,CONVERT(SMALLDATETIME,CONVERT(VARCHAR(50),@statement_date=
,101)))
	SELECT @Total_Balance =3D SUM(ISNULL(amount,0.00)) FROM tbl_ledger =
WHERE customer_id=3D@Customer_Id=20
	SET @Total_Balance =3D ISNULL(@Total_Balance,0.00) + =
ISNULL(@Starting_Balance,0.00)
=09

	IF(@Total_Balance>0.00 AND @Over60 IS NOT NULL)
		SELECT
			ISNULL(@Over60,0.00) + ISNULL(@Starting_Balance,0.00) AS Over60,
			CASE WHEN (ISNULL(@Over60,0.00) + ISNULL(@Starting_Balance,0.00)) > 0 =
THEN ISNULL(@Over90,0.00) + ISNULL(@Starting_Balance,0.00) ELSE 0.00 END =
AS Over90,
			CASE WHEN (ISNULL(@Over60,0.00) + ISNULL(@Starting_Balance,0.00)) > 0 =
AND (ISNULL(@Over90,0.00) + ISNULL(@Starting_Balance,0.00)) > 0 THEN =
ISNULL(@Over120,0.00) + ISNULL(@Starting_Balance,0.00) ELSE 0.00 END AS =
Over120,
			ISNULL(@Total_Balance,0.00) AS Total_Balance
	ELSE
		SELECT
			0.00 AS Over120,
			0.00 AS Over60,
			0.00 AS Over90,
			ISNULL(@Total_Balance,0.00) AS Total_Balance

